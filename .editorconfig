# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf
max_line_length = 100

[{*.py,*.module,*.opt,SConstruct}]
indent_style = space
indent_size = 4

[*.{sh,bash}]
end_of_line = lf

[Makefile]
indent_style = tab
